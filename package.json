{
	"name": "i18n-tools",
	"displayName": "i18n tools",
	"description": "Enhance using translations with i18n tools",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": ["Other"],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "i18n-tools.openAllLanguageVariants",
				"title": "i18n Tools: Open All Language Variants"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "i18n-tools.openAllLanguageVariants",
					"when": "resourceExtname =~ /\\.(json|js|ts|jsx|tsx)$/ && resourcePath =~ /i18n/",
					"group": "navigation@0"
				}
			],
			"editor/title/context": [
				{
					"command": "i18n-tools.openAllLanguageVariants",
					"when": "resourceExtname =~ /\\.(json|js|ts|jsx|tsx)$/ && resourcePath =~ /i18n/",
					"group": "navigation@1"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.90.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	}
}
